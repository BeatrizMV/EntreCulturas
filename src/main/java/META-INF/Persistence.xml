<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    /Nombre del fichero de persistencia y tipo de transacción que realizará
    <persistence-unit name="persistencia" transaction-type="RESOURCE_LOCAL">

        /Excluye las clases con las que no se va a trabajar
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        /Lista de las clases con las que trabajamos
        <class>model.Proyecto</class>
        <class>model.Sede</class>
        <class>model.Persona</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/entreCulturas"/>
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>